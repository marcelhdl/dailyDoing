<Window x:Class="DailyDoing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyDoing"
        mc:Ignorable="d"
        Title="DailyDoing v1.0" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="507" Margin="0,10,0,0">
            <TabItem x:Name="tab_login" Header="Login">
                <Grid Background="#FFE5E5E5" Margin="0,0,-29,-25">
                    <Label x:Name="lb_username" Content="Username" HorizontalAlignment="Left" Margin="63,60,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lb_passwd" Content="Password" HorizontalAlignment="Left" Margin="63,112,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txt_username" HorizontalAlignment="Left" Height="26" Margin="220,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" ToolTip="Insert Username" KeyboardNavigation.TabIndex="0"/>
                    <Button x:Name="btn_login" Content="Login" HorizontalAlignment="Left" Margin="63,210,0,0" VerticalAlignment="Top" Width="75" Click="btn_login_Click" KeyboardNavigation.TabIndex="2"/>
                    <Button x:Name="btn_exit" Content="Exit" HorizontalAlignment="Left" Margin="377,210,0,0" VerticalAlignment="Top" Width="75" KeyboardNavigation.TabIndex="3"/>
                    <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="220,112,0,0" VerticalAlignment="Top" Width="232" Height="26" KeyDown="txt_password_KeyDown" KeyboardNavigation.TabIndex="1"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_contacts" Header="Contacts">
                <Grid Background="#FFE5E5E5" Margin="0,2,0,-2">
                    <ListBox x:Name="lBox_Kontakte" HorizontalAlignment="Left" Height="271" VerticalAlignment="Top" Width="250" MouseDoubleClick="lBox_Kontakte_MouseDoubleClick" SelectionChanged="lBox_Kontakte_SelectionChanged"/>
                    <Label x:Name="lbl_name" Content="Name" HorizontalAlignment="Left" Margin="281,25,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lbl_firstname" Content="Firstname" HorizontalAlignment="Left" Margin="281,56,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lbl_email" Content="E-Mail" HorizontalAlignment="Left" Margin="281,95,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txt_Name" HorizontalAlignment="Left" Height="23" Margin="363,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
                    <TextBox x:Name="txt_Firstname" HorizontalAlignment="Left" Height="23" Margin="363,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
                    <TextBox x:Name="txt_email" HorizontalAlignment="Left" Height="23" Margin="363,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
                    <Button x:Name="btn_createContact" Content="Create Contact" HorizontalAlignment="Left" Margin="266,164,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.371,0.386" Click="btn_createContact_Click"/>
                    <Button x:Name="btn_deleteContact" Content="Delete Contact" HorizontalAlignment="Left" Margin="266,189,0,0" VerticalAlignment="Top" Width="90" Click="btn_updateContact_Click" IsEnabled="False"/>
                    <Button x:Name="btn_updateContact" Content="Update Contact" HorizontalAlignment="Left" Margin="266,214,0,0" VerticalAlignment="Top" Width="90" Click="btn_updateContact_Click" IsEnabled="False"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
