<Window x:Class="DailyDoing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyDoing"
        mc:Ignorable="d"
        Title="DailyDoing v1.0" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="507" Margin="0,10,0,0">
            <TabItem x:Name="tab_login" Header="Login">
                <Grid Background="#FFE5E5E5" Margin="0,0,-29,-25">
                    <Label x:Name="lb_username" Content="Username" HorizontalAlignment="Left" Margin="63,60,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lb_passwd" Content="Password" HorizontalAlignment="Left" Margin="63,112,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txt_username" HorizontalAlignment="Left" Height="23" Margin="220,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" ToolTip="Insert Username"/>
                    <TextBox x:Name="txt_password" HorizontalAlignment="Left" Height="23" Margin="220,112,0,0" VerticalAlignment="Top" Width="232" ToolTip="Insert Password" Foreground="White"/>
                    <Button x:Name="btn_login" Content="Login" HorizontalAlignment="Left" Margin="63,210,0,0" VerticalAlignment="Top" Width="75" Click="btn_login_Click"/>
                    <Button x:Name="btn_exit" Content="Exit" HorizontalAlignment="Left" Margin="377,210,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_contacts" Header="Contacts">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="lBox_Kontakte" HorizontalAlignment="Left" Height="271" VerticalAlignment="Top" Width="501"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
