<Window x:Class="DailyDoing.UpdateContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DailyDoing"
        mc:Ignorable="d"
        Title="UpdateContact" Height="350" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid Name="DetailView">
            <TextBox x:Name="txt_Name" Text="{Binding Name}" HorizontalAlignment="Left" Height="50" Margin="40,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"  materialDesign:HintAssist.Hint="Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_Firstname" Text="{Binding Firstname}" HorizontalAlignment="Left" Height="50" Margin="224,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="Firstname" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_email" Text="{Binding Email}" HorizontalAlignment="Left" Height="50" Margin="40,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="E-Mail" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_street" Text="{Binding Street}" HorizontalAlignment="Left" Height="50" Margin="40,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="Street" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_House_No" Text="{Binding HouseNumber}" HorizontalAlignment="Left" Height="50" Margin="224,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="House No" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_postcode" Text="{Binding PostCode}" HorizontalAlignment="Left" Height="50" Margin="422,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="Postcode" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_city" Text="{Binding City}" HorizontalAlignment="Left" Height="50" Margin="422,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="City" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_phonenumber" Text="{Binding PhoneNumber}" HorizontalAlignment="Left" Height="50" Margin="226,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="Phonenumber" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="txt_mobilePhone" Text="{Binding MobileNumber}" HorizontalAlignment="Left" Height="50" Margin="422,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" materialDesign:HintAssist.Hint="MobilPhone" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <Button x:Name="btn_updateContact" Content="Update Contact" HorizontalAlignment="Left" Margin="224,258,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.371,0.386" Click="btn_createUpdate_Click"/>

        </Grid>

    </Grid>
</Window>
